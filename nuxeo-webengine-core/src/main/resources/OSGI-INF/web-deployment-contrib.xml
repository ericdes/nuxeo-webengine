<?xml version="1.0"?>

<component name="org.nuxeo.ecm.webengine.deployment">

  <extension target="org.nuxeo.runtime.server" point="webapp">
    <webapp name="nuxeo" path="/nuxeo">
      <root>web</root>
    </webapp>
  </extension>


	<extension
		target="org.nuxeo.ecm.webengine.WebEngineComponent"
		point="install">

	    <install guard="/WEB-INF/default-config.xml">
	      <copy path="OSGI-INF/default-config.xml" target="/WEB-INF/default-config.xml" />
	      <copy path="OSGI-INF/default-webapp.xml" target="/WEB-INF/default-webapp.xml" />
	      <copy path="OSGI-INF/admin-webapp.xml" target="/WEB-INF/admin-webapp.xml" />
	      <!-- do not copy the web directory it will be copied in the activate method
	      of WebEngineComponent. This is needed because the WebEngine may need some
	      resource files from this directory when initializing and cannot wait for
	      this extension to be contributed  -->
	      <!-- copy path="web/*" target="/" / -->
	    </install>

	</extension>

  <extension
            target="org.nuxeo.ecm.webengine.WebEngineComponent"
            point="configuration">

    <configuration path="/WEB-INF/default-config.xml" />
    <configuration path="/WEB-INF/default-webapp.xml" />
    <configuration path="/WEB-INF/admin-webapp.xml" />

  </extension>

</component>
