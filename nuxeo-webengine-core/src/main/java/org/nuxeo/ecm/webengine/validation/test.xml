<?xml version="1.0"?>

<form id="test-form">

  <field id="test-int" required="true" type="integer">
    <constraints>
      <or>
        <lt>30</lt>
        <gt>40</gt>
      </or>
    </constraints>
  </field>

  <field id="test-string1">
    <constraints>
      <like>[A-Z]+@[a-z]+</like>
    </constraints>
  </field>

  <field id="test-string2">
    <constraints>
      <or>
        <enum>abc def</enum>
        <eq>abcdef</eq>
      </or>
    </constraints>
  </field>

  <field id="test-string3">
    <constraints>
      <not>
      <or>
        <enum>abc def</enum>
        <eq>abcdef</eq>
      </or>
      </not>
    </constraints>
  </field>


</form>
