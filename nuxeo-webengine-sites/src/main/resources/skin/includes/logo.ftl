<#macro logo>

<div class="logo" >
  <div style="vertical-align: middle;">
    <table >
      <tr style="vertical-align: top;">
        <td>
          <img src="${This.path}/logo" alt="logo">
        </td>
        <td style="padding-left: 10px;text-align: left;">
          <div class="pageTitle">
            ${name}
          </div>
          <div class="pageDescription">
            ${description} 
          </div>
        </td>
      </tr>
    </table>
  </div>
</div>

</#macro>