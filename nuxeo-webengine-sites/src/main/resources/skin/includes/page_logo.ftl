    <table >
      <tr style="vertical-align: top;">
        <td style="padding-left: 10px;text-align: left;">
          <div style="font-size: large;font-style: italic; color: white;">
            ${pageName}
          </div>
          <div style="font-size: medium;font-style: italic; color: white;">
            ${description} 
          </div>
        </td>
      </tr>
    </table>
  </div>
