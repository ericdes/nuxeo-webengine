<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.nuxeo.ecm.platform</groupId>
    <artifactId>nuxeo-platform-parent</artifactId>
    <version>5.2-20080710</version>
  </parent>

  <groupId>org.nuxeo.ecm.webengine</groupId>
  <artifactId>nuxeo-webengine-parent</artifactId>
  <version>1.0.b1</version>
  <packaging>pom</packaging>
  <name>Nuxeo WebEngine</name>
  <description>Nuxeo WebEngine is the lightweight content-centric web framework.</description>

  <modules>
    <module>nuxeo-platform-rendering</module>
    <module>nuxeo-webengine-core</module>
    <module>nuxeo-webengine-wiki</module>
    <module>nuxeo-webengine-server</module>
    <module>nuxeo-webengine-wiki-jsf</module>
  </modules>

  <properties>
    <nuxeo.webengine.version>1.0.b1</nuxeo.webengine.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-rendering</artifactId>
        <version>${nuxeo.platform.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.webengine</groupId>
        <artifactId>nuxeo-webengine-core</artifactId>
        <version>${nuxeo.webengine.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.webengine</groupId>
        <artifactId>nuxeo-webengine-wiki</artifactId>
        <version>${nuxeo.webengine.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.webengine</groupId>
        <artifactId>nuxeo-webengine-wiki-jsf</artifactId>
        <version>${nuxeo.webengine.version}</version>
      </dependency>

      <!-- was missing in nuxeo-platform-parent:pom -->
      <dependency>
        <groupId>org.nuxeo.runtime</groupId>
        <artifactId>nuxeo-runtime-scripting</artifactId>
        <version>${nuxeo.runtime.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.runtime</groupId>
        <artifactId>nuxeo-runtime-jetty-adapter</artifactId>
        <version>${nuxeo.runtime.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.runtime</groupId>
        <artifactId>nuxeo-runtime-launcher</artifactId>
        <version>${nuxeo.runtime.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.core</groupId>
        <artifactId>nuxeo-core-client</artifactId>
        <version>${nuxeo.core.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-comment</artifactId>
        <version>${nuxeo.platform.version}</version>
      </dependency>
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-platform-versioning-core</artifactId>
        <version>${nuxeo.platform.version}</version>
      </dependency>

      <!-- nuxeo-addons -->
      <dependency>
        <groupId>org.nuxeo.ecm.platform</groupId>
        <artifactId>nuxeo-shell-commands-base</artifactId>
        <version>${nuxeo.platform.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <aggregate>true</aggregate>
          <maxmemory>512m</maxmemory>
          <!--stylesheetfile>
            ${basedir}/src/site/resources/css/jdstyle.css
            </stylesheetfile-->
          <windowtitle>
            Nuxeo WebEngine ${project.version} API Documentation
          </windowtitle>
          <doctitle>
            Nuxeo WebEngine ${project.version} API Documentation
          </doctitle>
          <header>Nuxeo WebEngine ${project.version}</header>
          <links>
            <link>http://doc.nuxeo.org/5.1/apidocs/</link>
            <link>http://java.sun.com/j2se/1.5.0/docs/api/</link>
            <link>http://java.sun.com/javaee/5/docs/api/</link>
            <link> http://jakarta.apache.org/commons/collections/apidocs-COLLECTIONS_3_0/
            </link>
            <link>
              http://jakarta.apache.org/commons/fileupload/apidocs/
            </link>
            <link>
              http://jakarta.apache.org/commons/httpclient/apidocs/
            </link>
            <link>http://jakarta.apache.org/commons/logging/apidocs/</link>
            <link>http://jakarta.apache.org/commons/io/apidocs/</link>
            <link>http://junit.sourceforge.net/javadoc/</link>
            <link>http://logging.apache.org/log4j/docs/api/</link>
            <link>
              http://www.opensymphony.com/compass/versions/1.2M2/api/
            </link>
            <link>http://jackrabbit.apache.org/api-1/</link>
            <link>http://www.day.com/maven/jsr170/javadocs/jcr-1.0/</link>
            <link>http://myfaces.apache.org/tomahawk/apidocs/</link>
            <link>http://www.restlet.org/documentation/1.0/api/</link>
            <link>http://www.hibernate.org/hib_docs/v3/api/</link>
            <link>http://docs.jboss.com/seam/1.1.5.GA/api/</link>
            <link>http://docs.jboss.com/jbpm/v3.1/javadoc.jbpm/</link>
            <link>http://docs.jboss.com/jbpm/v3.1/javadoc.identity/</link>
            <link>http://labs.jboss.com/jbossremoting/docs/api/</link>
          </links>
        </configuration>
      </plugin>
    </plugins>
  </reporting>

  <repositories>
    <repository>
      <id>nuxeo_release</id>
      <url>http://archiva.nuxeo.org/archiva/repository/nuxeo_release</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>nuxeo_snapshot</id>
      <url>http://archiva.nuxeo.org/archiva/repository/nuxeo_snapshot</url>
      <releases>
        <enabled>false</enabled>
      </releases>
    </repository>
  </repositories>

  <distributionManagement>
    <site>
      <id>maven_website</id>
      <url>scpexe://gironde.nuxeo.com/home/mavenweb/webengine/</url>
    </site>
    <repository>
      <id>nuxeo_release</id>
      <url>
        scpexe://tamise.nuxeo.com/home/archiva/repositories/nuxeo_release
      </url>
    </repository>
    <snapshotRepository>
      <id>nuxeo_snapshot</id>
      <url>
        scpexe://tamise.nuxeo.com/home/archiva/repositories/nuxeo_snapshot
      </url>
    </snapshotRepository>
  </distributionManagement>

  <scm>
    <connection>scm:hg:http://hg.nuxeo.org/nuxeo-webengine#1.0.b1</connection>
    <developerConnection>scm:hg:https://hg.nuxeo.org/nuxeo-webengine#1.0.b1</developerConnection>
    <url>http://hg.nuxeo.org/nuxeo-webengine#1.0.b1/</url>
  </scm>

</project>
