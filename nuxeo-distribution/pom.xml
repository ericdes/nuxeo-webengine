  <artifactId>nuxeo-application-distribution</artifactId>
  <packaging>pom</packaging>
  <name>Nuxeo Application Distribution</name>
  <description>Defines the main distribution of standalone nuxeo applications</description>

  <properties>
    <application.name>nuxeo-app</application.name>
    <nuxeo.shell.version>5.2-SNAPSHOT</nuxeo.shell.version>
    <nuxeo.webengine.version>5.2-SNAPSHOT</nuxeo.webengine.version>
    <!--nuxeo.core.version>1.5-SNAPSHOT</nuxeo.core.version-->
  </properties>

  <profiles>
    <profile>
      <id>shell</id>
      <activation>
        <activeByDefault>true</activeByDefault>       
      </activation>
      <modules>
        <module>nuxeo-application-base</module>
        <module>nuxeo-shell-template</module>
      </modules>      
    </profile>
    <profile>
      <id>jetty</id>
      <modules>
        <module>nuxeo-application-base</module>
        <module>nuxeo-server-template</module>
        <module>nuxeo-jetty-template</module>
      </modules>
    </profile>
    <profile>
      <id>gf3</id>
      <modules>
        <module>nuxeo-application-base</module>
        <module>nuxeo-server-template</module>
        <module>nuxeo-gf3-template</module>
      </modules>
    </profile>
    <profile>
      <id>core</id>
      <modules>
        <module>nuxeo-application-base</module>
        <module>nuxeo-server-template</module>
      </modules>
    </profile>
    <!-- needed to be inherited by modules -->
  </profiles>

